{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmit": false,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["components/**/*", "declarations.d.ts", "src/**/*"],
  "exclude": ["node_modules", "android", "ios", "dist"]
}
